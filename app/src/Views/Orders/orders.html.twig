{% extends 'base.html.twig' %}

{% block main %}
    <div class="text-center">
        <h3>Your Orders</h3>
        <div class="row d-flex justify-content-center" style="width: fit-content; margin: 0 auto;">
            {% for order in orders %}
                <div class="card mx-3 col-12 col-sm-6 col-md-4 col-lg-3 col-xl-2"
                     style="width: 18rem; margin: 1rem auto;">
                    <div class="card-body">
                        <h5 class="card-title">Order ID: {{ order.order_id }}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Cars: {{ order.quantity }}</h6>
                        <h6 class="card-subtitle mb-2 text-muted">Total Price: Â£{{ order.total }}</h6>
                        <div class="d-flex justify-content-around">
                            <a href="/orders/{{ order.order_id }}" class="card-link">More info</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}